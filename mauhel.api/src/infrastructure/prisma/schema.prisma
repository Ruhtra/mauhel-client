generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
    url       = env("DATABASE_URL")
    directUrl = env("DIRECT_URL")
}

enum Role {
  PROFESSOR
  ALUNO
  GERENTE
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  role      Role     @default(ALUNO) // ENUM com os tipos de usu√°rio
  createdAt DateTime @default(now())
}
